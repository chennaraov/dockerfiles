FROM ubuntu:14.04

RUN apt-get -y update 

RUN apt-get install -y wget

RUN wget http://ubuntu.cs.utah.edu/ubuntu/pool/universe/g/gcc-4.4/gcc-4.4-base_4.4.7-8ubuntu1_amd64.deb

RUN dpkg -i gcc-4.4-base_4.4.7-8ubuntu1_amd64.deb

COPY . /usr/src/myapp

WORKDIR /usr/src/myapp

RUN gcc -o myapp main.c

CMD ["./myapp"]
